{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "lib": [
            "esnext"
        ],
        "target": "ESNext",
        "declaration": true
    },
    "include": [
        "./src/**/*.js",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}